<!-- NavBar -->
<nav class="navbar navbar-expand-lg navbar-dark" style="background-color:#666a6e">
  <div class="container-fluid">
    <!-- Logo and Brand Name -->
    <a class="navbar-brand d-flex align-items-center" href="/" style="font-weight: bold; color: white;">
      <img src="/assets/images/logo.png" alt="Logo" width="87" height="58" class="me-2">
      Job Satisfaction Survey
    </a>
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" 
            data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" 
            aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav ms-auto">
        <!-- Home Link -->
        <li class="nav-item">
          <% if(title=="Home") { %>
            <a class="nav-link active" href="./home" style="font-weight: bold; color: rgb(210, 210, 210);">
          <% } else { %>
            <a class="nav-link" href="./home" style="font-weight: bold; color: white;">
          <% } %>
              <i class="fa-solid fa-house-chimney"></i> Home
            </a>
        </li>
        <!-- Survey Tracker Link -->
        <li class="nav-item">
          <% if(title == "Survey Tracker") { %>
            <a class="nav-link active" href="/surveyslist" style="font-weight: bold; color: rgb(210, 210, 210);">
          <% } else { %>
            <a class="nav-link" href="/surveyslist" style="font-weight: bold; color: white;">
          <% } %>  
              <i class="fa-solid fa-book"></i> Survey Tracker
            </a>
        </li>
        <!-- User Greeting -->
        <% if(typeof displayName=='string' && displayName) { %>
          <li class="navbar-text" style="font-weight: bold; color: white;">
            <i class="fas fa-lg fa-user"></i> Welcome, <%= displayName %>
          </li>
          <!-- Logout Link -->
          <li class="nav-item">
            <a href="/logout" class="nav-link" style="color: white;">
              <i class="fas fa-sign-out"></i> Logout
